{
  "name": "crypto-guardian",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env.local -- prisma generate && next dev",
    "build": "dotenv -e .env.local -- prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "collect-exchanges": "dotenv -e .env.local -- tsx scripts/collect-exchanges.ts",
    "collect-cryptocompare": "dotenv -e .env.local -- tsx scripts/collect-cryptocompare.ts",
    "calculate-stats": "dotenv -e .env.local -- tsx scripts/calculate-daily-stats.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@upstash/redis": "^1.35.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.544.0",
    "next": "^15.5.9",
    "next-intl": "^4.3.9",
    "prisma": "^6.16.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "whois-json": "^2.0.4",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  }
}
